{
    "name": "mrngophu/flarum-vietnamese",
    "type": "flarum-extension",
    "description": "Vietnamese language pack.",
    "homepage": "https://github.com/mrngophu/flarum-vietnamese",
    "keywords": ["locale"],
    "license": "MIT",
    "require": {
        "flarum/core": "^0.1.0-beta.3"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        },
        "flarum-extension": {
            "title": "Vietnamese",
            "icon": {
                "image": "icon.svg",
                "backgroundColor": "#00247d",
                "backgroundSize": "cover",
                "backgroundPosition": "center"
            }
        },
        "flarum-locale": {
            "code": "vi",
            "title": "Vietnamese"
        }
    }
}
